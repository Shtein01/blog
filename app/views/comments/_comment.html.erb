<% unless comment.archived? %>
  <p>
    <strong><%= comment.commenter + ": " %></strong>
    <%= comment.body %>
  </p>

  <p>
    <%= link_to "Удалить комментарий", [comment.article, comment], #method: :delete
                data:
      { "turbo_method": :delete, turbo_confirm: "Хотите удалить этот комментарий?" },
      :class => 'btn btn-danger'
    %>
  </p>
<% end %>