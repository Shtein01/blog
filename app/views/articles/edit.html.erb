<h3>Edit Article</h3>

<%#= render "form", article: @article %>

<%= form_for :article, url: article_path(@article), method: :patch do |form| %>
  <% if @article.errors.any? %>
    <% @article.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger"> <%= msg %> </div>
    <%end %>
  <% end %>
  <p>
  Название <br>
    <%= form.text_field( :title, { :class => 'form form-control'} ) %>
  </p>
  <p>
    Текст статьи <br>
    <%= form.text_area( :body, { :class => 'form form-control'} ) %>
  </p>

  <p>
    Статус:
    <%= form.select :status, Visible::VALID_STATUSES, selected: @article.status %>
  </p>
  <div>
    <%= form.submit( {:class => 'btn btn-success'} ) %>
  </div>
<% end %>

